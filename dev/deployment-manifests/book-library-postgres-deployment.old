apiVersion: apps/v1
kind: Deployment
metadata:
  name: book-library-postgres-db
  namespace: bozo-book-library-dev
  labels: 
    application: bozo-book-library  
spec:
  replicas: 1
  selector: 
    matchLabels:
      app: book-library-postgres-db
  template:
    metadata:
      labels:
        app: book-library-postgres-db
    spec:
      serviceAccountName: bozo-book-service-account
      containers:
        - name: postgres
          image: postgres:10.4
          imagePullPolicy: "IfNotPresent"
          ports:
            - containerPort: 5432
          envFrom:
            - configMapRef:
                name: book-library-postgres-db-config
          volumeMounts:
            - mountPath: /var/lib/postgresql/data
              name: postgredb
      volumes:
        - name: postgredb
          persistentVolumeClaim:
            claimName:  book-library-postgres-db-pv-claim
---
apiVersion: v1
kind: Service
metadata:
  name: book-library-postgres-db-svc
  namespace: bozo-book-library-dev
  labels:
    app: book-library-postgres-db-svc
    application: bozo-book-library
spec:
  type: NodePort
  ports:
   - port: 5432
  selector:
   app: book-library-postgres-db